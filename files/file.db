CREATE TABLE сотрудники (
    ID_сотрудника SERIAL PRIMARY KEY,
    Имя_сотрудника VARCHAR(255),
    Фамилия_сотрудника VARCHAR(255),
    Отчество_сотрудника VARCHAR(255),
    Должность VARCHAR(255),
    Зарплата DECIMAL(10, 2),
    Тип_подразделения VARCHAR(255),
    Структурное_подразделение VARCHAR(255),
    Дата_приема_на_работу DATE,
    Адрес_филиала TEXT,
    Назначенный_проект TEXT
);

CREATE TABLE Отделы (
    ID_отдела SERIAL PRIMARY KEY,
    Тип_отдела VARCHAR(255),
    Описание TEXT
);

CREATE TABLE Проекты (
    ID_проекта SERIAL PRIMARY KEY,
    Название_проекта VARCHAR(255),
    Описание TEXT,
    Назначен_сотруднику INTEGER REFERENCES Сотрудники(ID_сотрудника)
);

CREATE TABLE Филиалы (
    ID_филиала SERIAL PRIMARY KEY,
    Адрес_филиала TEXT,
    Город VARCHAR(255),
    Регион VARCHAR(255)
);

CREATE TABLE Должности (
    ID_должности SERIAL PRIMARY KEY,
    Название_должности VARCHAR(255),
    Описание TEXT
);

CREATE TABLE Units (
    ID_структурного_подразделения SERIAL PRIMARY KEY,
    Название_структурного_подразделения VARCHAR(255),
    Описание TEXT
);

CREATE TABLE Подразделения (
    ID_сотрудника INTEGER REFERENCES Сотрудники(ID_сотрудника),
    Сумма_зарплаты DECIMAL(10, 2),
    Дата_выплаты DATE,
    PRIMARY KEY (ID_сотрудника, Дата_выплаты)
);
